<tal:block xmlns:tal="http://xml.zope.org/namespaces/tal">
/* Reset password */
#gs-profile-status-password .well {
    max-width: 580px;
}
/************************/
/* The Your groups list */
/************************/

#gs-profile-status-groups-h {
    padding: 40px 0 0 0;
}
#gs-profile-status-groups-intro p {
    padding: 10px 0 20px 0;
    margin: 0 0 0 0;
}
.gs-profile-status-groups-site-odd {
    background-color: #fafafa;
    border-top: 1px #cccccc solid;
    border-bottom: 1px #cccccc solid;
}
.gs-profile-status-groups-site-even {
    background-color: #ebebeb;
}
.gs-profile-status-groups-site-odd:hover {
    background-color: #ffffff;
}
.gs-profile-status-groups-site-even:hover {
    background-color: #ffffff;
}
.gs-profile-status-groups-site-info td,
.gs-profile-status-groups-site-info th {
    vertical-align: top;
}
.gs-profile-status-groups-group-info {
    max-width: 600px;
}
.gs-profile-status-groups-site-info-h {
    margin: 0 0 0 0;
    padding: 40px 0 0 0;
    max-width: 560px;
}
.gs-profile-status-groups-site-info-intro,
.gs-profile-status-groups-site-info-start-group {
    margin: 0 0 0 0;
    padding: 10px 0 0 0;
}
.gs-profile-status-groups-group-info-h h3 {
    margin: 0 0 0 0;
    padding: 0 0 0 0;
}
.gs-profile-status-groups-site-info-h .site {
    padding: 0 10px 0 0;
}
.gs-profile-status-groups-site-info-intro p,
.gs-profile-status-groups-site-info-start-group p {
    padding: 0 0 10px 20px;
    margin: 0 0 0 0;
}
.gs-profile-status-groups-group-info-h {
    padding: 40px 0 0 20px;
    margin: 0 0 0 0;
}
.gs-profile-status-groups-group-info-privacy td,
.gs-profile-status-groups-group-info-general-stats-none td,
.gs-profile-status-groups-group-info-posting th,
.gs-profile-status-groups-group-info-digest td,
.gs-profile-status-groups-group-info-canpost td {
    padding: 10px 0 0 20px;
}
.gs-profile-status-groups-group-info-privacy p,
.gs-profile-status-groups-group-info-digest p,
.gs-profile-status-groups-group-info-canpost p {
    margin: 0 0 0 0;
    max-width: 580px;
}
.gs-profile-status-groups-group-info-posting th {
    vertical-align: top;
    width: 70px;
}
.gs-profile-status-groups-group-info-posting th h4 {
    margin: 0 0 0 0;
}
.gs-profile-status-groups-group-info-posting th .val {
    font-size: 40px;
    line-height: 40px;
}
.gs-profile-status-groups-group-info-posting td {
    margin: 0 0 0 0;
    padding: 10px 0 0 10px;
    width: 450px;
    vertical-align: top;
}
.gs-profile-status-groups-group-info-posting-people-desc {
    margin: 0 0 0 0;
    padding: 0 0 0 0;
}
.gs-profile-status-groups-group-info-posting-people-photo {
    margin: 0 0 0 0;
    padding: 10px 0 0 0;
}
.gs-profile-status-groups-group-info-posting-people-photo img {
    margin: 0 0 0 0;
    padding: 0 10px 0 0;
}
/* Similar to the :last-child pseudo-element, but works in tables */
.gs-profile-status-groups-spacer div {
    padding: 40px 0 0 0;
    margin: 0 0 0 0;
    height: 0;
}
.gs-profile-status-groups-end {
    border-bottom: 1px solid #cccccc;
}
.gs-profile-status-groups-end div {
    margin: 0 0 0 0;
    padding: 0 0 0 0;
    height: 0;
}

/***********/
/* Profile */
/***********/
#gs-profile-status-profile-image-photo {
    margin: 0 0 0 0;
    padding: 40px 10px 0 0;
}
#gs-profile-status-profile-h {
    margin: 0 0 0 0;
    padding: 40px 0 20px 0;
    line-height: 20px;
}
#gs-profile-status-profile-image-change {
    padding: 10px 0 0 0;
}
#gs-profile-status-profile-image-change a,
#gs-profile-status-profile-image-add {
    width: 56px; /* 70px [img width] - ((1px [border] + 6px [padding]) * 2) */
}
#gs-profile-status-profile-intro p.well {
    max-width: 510px;
}
#gs-profile-status-profile-info th {
    padding: 20px 10px 0 0;
}
#gs-profile-status-profile-info td {
    padding: 20px 0 0 0;
}
#gs-profile-status-profile-head {
    margin: 0 0 0 0;
    padding: 0 0 10px 10px;
}
#gs-profile-status-profile-info-name .fn {
    margin: 0 0 0 0;
    padding: 0 10px 0 0;
}
#gs-profile-status-profile-info-bio-content p {
    margin: 0 0 0 0;
    padding: 0 0 10px 0;
    max-width: 510px;
}
#gs-profile-status-profile-info-bio-missing {
    max-width: 480px;
}
/* Email */
#gs-profile-status-email-h {
    margin: 0 0 0 0;
    padding: 20px 0 0 0;
}
#gs-profile-status-email-intro {
    margin: 0 0 0 0;
    padding: 10px 0 0 20px;
}
#gs-profile-status-email h4 {
    margin: 0 0 0 0;
    padding: 20px 0 0 20px;
}
#gs-profile-status-email ul {
    margin: 0 0 0 0;
    padding: 10px 0 0 40px;
}
#gs-profile-status-email li {
    list-style-type: none;
}
#gs-profile-status-email .well {
    max-width: 560px;
}
#gs-profile-status-email-add {
    margin: 0 0 0 0;
    padding: 10px 0 0 40px;
}
#gs-profile-status-email-unverified-intro {
    margin: 10px 0 0 40px;
    max-width: 540px; /* 600 - (40 [left margin] + 2 * (1 [border] + 9 [padding[))*/
}
#gs-profile-status-email-unverified-l code {
    padding: 0 10px 0 0;
}
#gs-profile-status-email-spacer {
    margin: 0 0 0 0;
    padding: 10px 0 0 0;
    border-bottom: 1px solid #cccccc;
}
#gs-profile-status-email-spacer div {
    height: 0;
    margin: 0 0 0 0;
    padding: 10px 0 0 0;
}

#gs-profile-status-support-h {
    margin: 0 0 0 0;
    padding: 20px 0 10px 0;
}
</tal:block>
